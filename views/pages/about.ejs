<!-- section -->
<%- contentFor('hero') %>
<section class="hero">
  <div class="hero-content">
    <h1><%- name %></h1>
    <h4>Software Engineer</h4>

    <a class="btn btn-lg btn-primary" href="/contact">Contact</a>
  </div>
</section>

<!-- main -->
<% contentFor('body') %>
<div class="jumbotron text-center" style="
    height: 596px;">
  <div class="jumbotron-component-img"> 
    <h3 class="h3-name"><%- name %></h3>
    <img class="profile-picture" src="<%- avatar %>">
  </div>
  <div class="jumbotron-component-description">
    <p><%- description %></p>
  </div>
</div>

<!-- projects -->
<div class="container project-container">
  <h2 style="text-align: center;">Projects</h2>
  <% for (project of projects) { %>
    <div class="project-component-img" style="padding-top: 20px;">
      <div class="img-container">
        <h4 class="h4-project"><%- project.name %></h4>
        <a href="<%- project.link %>" target="_blank">
          <img class="img-project" src="<%- project.image %>">
        </a>
      </div>
      <div class="project-component-description">
        <p class="p-project"><%- project.description %></p>
      </div>
    </div>
  <% } %>
</div>
